---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div class="row blog-base">
<% page_articles.sort_by{|a| a.date}.reverse.each_with_index do |article, i| %>
<article class="col-sm-12 col-md-6 post-base">
  <header>
    <img class="post-image" src="<%= article.data.thumbnail_image %>">
    <div class="post-date">
      <%= article.date.strftime('%b %e, %Y') %>
    </div>
    <h2 class="post-title"><%= link_to article.title, article %></h2>
    <span class="post-tags">
        <% article.tags.each_with_index do |tag, index| %>
          <% if index < article.tags.size - 1 %>
          <span class="post-tags__each"><%= tag %> </span><span class="post-tags__each-pipe">|</span>
          <% else %>
          <span class="post-tags__each"><%= tag %> </span>
          <% end %>
        <% end %>
      </span>
  </header>

  <div class="post-body"><%= article.summary(250, '...') %></div>

  <footer>
    <%= link_to 'Read moreâ€¦', article %>
  </footer>
</article>
<% end %>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
